# Database
DATABASE_URL=postgresql://user:password@hostname:port/database?sslmode=require

# Authentication
BETTER_AUTH_SECRET=your-secret-key
BETTER_AUTH_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Email Configuration
EMAIL_PROVIDER=brevo # Options: brevo, sendgrid, mailgun, resend, postmark, custom
EMAIL_PROVIDER_API_KEY=your-email-provider-api-key
EMAIL_PROVIDER_API_URL=https://api.brevo.com/v3/smtp/email
EMAIL_FROM=noreply@example.com
EMAIL_FROM_NAME=Company Name

# Provider-specific configuration
EMAIL_PROVIDER_DOMAIN=mg.yourdomain.com # Required for Mailgun
EMAIL_PROVIDER_REGION=us-east-1 # Optional for region-specific APIs

# Admin
ADMIN_EMAIL=admin@example.com

# File Upload
UPLOADTHING_TOKEN=your-uploadthing-token